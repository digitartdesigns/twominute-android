<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.craving.craving"
        version = "1.1">
    <name>Two Minute Craving Dr.</name>
    <description>
        Web App by Digit Art Designs
    </description>
    <author href="http://digitartdesigns.com" email="support@digitartdesigns.com">
        Digit Art Designs Ltd. Team
    </author>
	<feature name="http://api.phonegap.com/1.0/device" />
	<preference name="phonegap-version" value="3.1.0" />
	<gap:platform name="android" />
	<feature name="Notification">
    <param name="android-package" value="org.apache.cordova.Notification" />
     </feature>
	<gap:plugin name="Notification" value="org.apache.cordova.core.Notification" />
	<gap:plugin name="Vibration" value="org.apache.cordova.core.Vibration" />
    <gap:plugin name="org.apache.cordova.device" />
	<preference name="splash-screen-duration" value="5000" />
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
	<icon src="images/icon-72.png" gap:platform="android" gap:density="hdpi" gap:role="default" />
	<gap:splash src="images/screen-portrait.png" gap:platform="android" gap:density="xhdpi" />
	<access origin="*" />
</widget>
